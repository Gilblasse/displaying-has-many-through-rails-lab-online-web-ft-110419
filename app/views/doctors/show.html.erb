<h1> <%=@doctor.name%> </h1>
<small> <%=@doctor.department%> </small>

<h3>Appointments</h3>
<ul>
    <%@doctor.appointments.each do |appointment|%>
        <li> <%= link_to "#{appointment.patient.name} - #{appointment.appointment_datetime.strftime('%B %d, %Y at %H:%M')}" , patient_path(appointment.patient)%> </li>
    <%end%>
</ul>